@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha ?";
}
<div style="margin-auto:0 auto; margin-top:200px">
    <div class="row justify-content-center mt-5" style="margin-top:100px;">

        <div class="col-md-4 text-center">
            <h2 class="mb-5">@ViewData["Title"]</h2>
            <h4>Coloque seu E-mail</h4>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary"> Enviar </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
